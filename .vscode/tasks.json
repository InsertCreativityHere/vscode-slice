{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "group": {
                "kind": "build"
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Build Rust Server",
            "type": "shell",
            "command": "cargo build --release",
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build Rust Server",
                "npm: compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
